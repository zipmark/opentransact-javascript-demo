<div id="profile" data-profile-id="<%= @profile.resource_id %>" class="py-4 max-h-screen overflow-hidden">
  <div hidden id="clientToken"></div>
  <div hidden id="apiEndpoint" data-endpoint="<%= api_endpoint %>"></div>

  <div class="bg-white shadow overflow-hidden sm:rounded-lg space-y-10 md:space-y-0 md:grid md:grid-cols-2">
    <div class="flex">
      <div class="flex-grow border-r border-gray-200">
        <div class="px-4 py-5 sm:px-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900">
            Profile Information
          </h3>
        </div>
        <div class="border-t border-gray-200 px-4 py-5 sm:p-0">
          <dl class="sm:divide-y sm:divide-gray-200">
            <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
              <dt class="text-sm font-medium text-gray-500">
                Name
              </dt>
              <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                <%= @profile.name %>
              </dd>
            </div>
            <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
              <dt class="text-sm font-medium text-gray-500">
                Profile Owner Type
              </dt>
              <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                <%= @profile.attributes.owner["type"] %>
              </dd>
            </div>

            <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
              <dt class="text-sm font-medium text-gray-500">
                Accounts
              </dt>
              <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                <div class="pl-3 pb-3 flex items-center justify-between text-sm">
                  <div class="w-0 flex-1 flex items-center">
                  </div>
                  <div class="ml-4 flex-shrink-0">
                    <button type="button" id="addAccountButton" class="inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                      <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                      Add Account
                    </button>
                  </div>
                </div>
                <%= erb :accounts_list %>
              </dd>
            </div>

            <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
              <dt class="text-sm font-medium text-gray-500">
                Addresses
              </dt>
              <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                <div class="pl-3 pb-3 flex items-center justify-between text-sm">
                  <div class="w-0 flex-1 flex items-center">
                  </div>
                  <div class="ml-4 flex-shrink-0">
                    <button type="button" id="addAddressButton" class="inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                      <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                      Add Address
                    </button>
                  </div>
                </div>
                <%= erb :address_list %>
              </dd>
            </div>

            <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
              <dt class="text-sm font-medium text-gray-500">
                Phone Numbers
              </dt>
              <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                <div class="pl-3 pb-3 flex items-center justify-between text-sm">
                  <div class="w-0 flex-1 flex items-center">
                  </div>
                  <div class="ml-4 flex-shrink-0">
                    <button type="button" id="addPhoneNumberButton" class="inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                      <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                      Add Phone Number
                    </button>
                  </div>
                </div>
                <%= erb :phone_numbers_list %>
              </dd>
            </div>

            <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
              <dt class="text-sm font-medium text-gray-500">
                Email Addresses
              </dt>
              <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                <div class="pl-3 pb-3 flex items-center justify-between text-sm">
                  <div class="w-0 flex-1 flex items-center">
                  </div>
                  <div class="ml-4 flex-shrink-0">
                    <button type="button" id="addEmailAddressButton" class="inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                      <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                      Add Email Address
                    </button>
                  </div>
                </div>
                <%= erb :email_addresses_list %>
              </dd>
            </div>
          </dl>
        </div>
      </div>
    </div>

    <div class="flex max-h-screen">
      <div class="flex-grow">
        <div>
          <div class="hidden sm:block">
            <div class="border-b-1 border-gray-200">
              <nav class="-mb-px flex space-x-8 pt-2" aria-label="Tabs">
                <a href="#" class="border-indigo-500 text-indigo-600 whitespace-nowrap py-4 px-5 border-b-2 text-lg leading-6 font-medium" aria-current="page">
                  Recent Activity
                </a>
                <a href="#" class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-5 border-b-2 text-lg leading-6 font-medium">
                  Transactions
                </a>
              </nav>
            </div>
          </div>
        </div>
        
        <div class="border-t border-gray-200 px-4 py-5 sm:p-0">
          <%= erb :activities_list %>
          <%= erb :transaction_list %>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/js/profile.js"></script>

<script src="/js/iso-3166.js"></script>